<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/r_image"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/r_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lonnie Stone"
            android:textColor="#3F51B5"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/r_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lonnie.stone@example.com"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/r_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:id="@+id/r_discountPercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:id="@+id/r_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:id="@+id/r_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lonnie.stone@example.com"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/r_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:id="@+id/r_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:id="@+id/r_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />



    </LinearLayout>

</LinearLayout>